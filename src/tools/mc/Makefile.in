#### Start of system configuration section. ####

#
# directories for the install target
#
PREFIX =		@prefix@
INSTALL_BINDIR =	$(PREFIX)/bin
INSTALL_HEAPDIR =	$(INSTALL_BINDIR)/.heap
INSTALL_LIBDIR =	$(PREFIX)/lib
INSTALL_INCDIR =	$(PREFIX)/include

#
# directories for the local-install target
#
SRCDIR =	@MANTICORE_ROOT@/src
LIBDIR =	@MANTICORE_ROOT@/lib
BINDIR =	@MANTICORE_ROOT@/bin
HEAPDIR =	$(BINDIR)/.heap
THISDIR =	$(SRCDIR)/tools/mc

INSTALL =	@INSTALL@
SHELL =		@SHELL@
@SET_MAKE@

INSTALL_SMLNJ_WRAPPER =	@INSTALL_SMLNJ_WRAPPER@
ML_BUILD =		@ML_BUILD@
ML_BUILD_FLAGS =	-Ctdp.instrument=true \$$smlnj-tdp/back-trace.cm
ML_MAKEDEPEND =		@ML_MAKEDEPEND@
ML_MAKEDEPEND_FLAGS =

ML_LEX = 	@ML_LEX@
ML_ULEX =	@ML_ULEX@
ML_ANTLR = 	@ML_ANTLR@
ML_YACC =	@ML_YACC@
MLTON =		@MLTON@
MLTON_FLAGS =	-verbose 1

#### End of system configuration section. ####

PROGRAM =		pmlc
TARGET =		@TARGET@
HEAP_IMAGE =		$(PROGRAM).@SMLNJ_HEAP_SUFFIX@
ROOT_CM =		driver/$(TARGET).cm

CM_FILES =		ast-opt/sources.cm \
			ast/sources.cm \
			binding/sources.cm \
			bom-opt/sources.cm \
			bom/sources.cm \
			cfg-opt/sources.cm \
			cfg/sources.cm \
			closure/sources.cm \
			codegen/group.cm \
			codegen/sources.cm \
			codegen/wrapper.cm \
			common/sources.cm \
			convert/sources.cm \
			cps-opt/sources.cm \
			cps/sources.cm \
			driver/sources.cm \
			driver/$(TARGET).cm \
			env/sources.cm \
			match-comp/sources.cm \
			mlb/sources.cm \
			parse-tree/sources.cm \
			parser/sources.cm \
			prim/sources.cm \
			translate/sources.cm \
			typechecker/sources.cm \
			../../lib/mlton/sources.cm \
			mlton/sources.cm \
			$(ROOT_CM)

PARSER_OUTPUT := \
	mlb/mlb.lex.sml \
	mlb/mlb.grm.sml \
	parser/manticore.lex.sml \
	parser/manticore.grm.sml \
	mlton/front-end/ml.lex.sml \
	mlton/front-end/ml.grm.sml \
	mlton/front-end/mlb.lex.sml \
	mlton/front-end/mlb.grm.sml

.PHONY:		build
build:		$(HEAP_IMAGE) test/$(PROGRAM)

test/$(PROGRAM):	$(HEAP_IMAGE)
	$(INSTALL_SMLNJ_WRAPPER) $(PROGRAM) $(THISDIR)/test

$(HEAP_IMAGE):
	$(ML_BUILD) $(ML_BUILD_FLAGS) $(ROOT_CM) Main.main $(PROGRAM)
	touch $(HEAP_IMAGE)

mlb/%.lex.sml: mlb/%.lex
	$(ML_ULEX) $<

mlb/%.grm.sig mlb/%.grm.sml: mlb/%.grm
	$(ML_ANTLR) $<

parser/%.lex.sml: parser/%.lex
	(cd parser ; $(ML_ULEX) $(<F))

parser/%.grm.sig parser/%.grm.sml: parser/%.grm
	(cd parser ; $(ML_ANTLR) $(<F))

mlton/front-end/%.lex.sml: mlton/front-end/%.lex
	$(ML_LEX) $<

mlton/front-end/%.grm.sig mlton/front-end/%.grm.sml: mlton/front-end/%.grm
	$(ML_YACC) $<


.PHONY:		mlton
mlton:	$(PARSER_OUTPUT)
	$(MLTON) -output $(PROGRAM) $(MLTON_FLAGS) driver/sources.mlb

# the following rule forces rerunning of ml-antlr if one of the inputs
# changes.
#
parser/manticore.grm:	parser/bom.grm parser/sml.grm
	touch parser/manticore.grm

.depend:	$(CM_FILES)
	touch .depend
	$(ML_MAKEDEPEND) $(ML_MAKEDEPEND_FLAGS) -n -f .depend $(ROOT_CM) $(HEAP_IMAGE)

ifneq ($(MAKECMDGOALS),clean)
ifneq ($(MAKECMDGOALS),devclean)
ifneq ($(MAKECMDGOALS),distclean)
sinclude .depend
endif
endif
endif

.PHONY:		local-install
local-install:	$(HEAP_IMAGE)
	$(INSTALL_SMLNJ_WRAPPER) $(PROGRAM) $(BINDIR)

.PHONY:		install
install:	$(HEAP_IMAGE)
	$(INSTALL_SMLNJ_WRAPPER) $(PROGRAM) $(INSTALL_BINDIR)

#################### Cleanup ####################

CLEAN_SUBDIRS =

CLEAN_FILES =		$(HEAP_IMAGE) \
			*/*.grm.sml \
			*/*.lex.sml \
			.depend

DISTCLEAN_FILES =	codegen/group.cm \
			codegen/wrapper.cm \
			common/load-paths.sml \
			common/run-cpp.sml \
			driver/version-fn.sml \
			driver/runtime-constants.sml \
			driver/build-executable.sml \
			test/$(PROGRAM) \
			test/.heap/$(HEAP_IMAGE)

DEVCLEAN_FILES =

include @MANTICORE_MKDIR@/clean-rules.gmk
